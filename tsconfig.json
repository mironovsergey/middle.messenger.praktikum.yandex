{
  "include": [
    "src",
    "declaration.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"]
  }
}
